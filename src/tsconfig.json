{
  "compileOnSave": false,
  "preserveWhitespaces": "off",
  "angularCompilerOptions": {
    "preserveSymlinks": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "types": [
      "hammerjs",
      "jasmine",
      "jasminewd2",
      "karma"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "preserveSymlinks": true
  }
}
